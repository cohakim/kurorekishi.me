- content_for :scripts do
  = render 'orders/scripts/progressbar'
  = render 'orders/scripts/status_dialog'

#content.blog.bg-dark
  #status
    %article.post.format-aside
      = flash_messages
      .wrapped-content
        #progressbar
          = render 'orders/show/progressbar', order: @order
        .text-center(style='margin-top:15px;')
          = link_to 'show more status', {}, 'data-remodal-target': 'modal'
      %hr.no-margin
      .wrapped-content.text-center
        = render partial: 'application/adsense/rectangle'
  .primary-button.text-center(style='margin:8px')
    #operation
      = button_to abort_order_path, class: 'button radius alert', form:{ style: 'display: inline-block;' } do
        キャンセル
      = button_to confirm_order_path, class: 'button radius', form: { style: 'display: inline-block;' } do
        結果を見る

#status-modal.remodal(data-remodal-id='modal')
  = render 'orders/show/status_dialog', order: @order, server_status: @server_status
